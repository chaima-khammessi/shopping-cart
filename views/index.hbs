{{#if successMass}}

<div class="alert alert-success text-center" >
  {{successMass}}
</div>

{{/if}}

{{#each products}}

<div class="row">
  {{#each this}}
  <div class="col">
    <div class="card" style="width: 18rem;">
      <div class="text-center">
        <img src="{{this.imagePath}}" class="card-img-top" alt="...">
      </div>
      <div class="card-body">
        <h5 class="card-title">{{this.productName}}</h5>
        <p class="card-text">storage Capacity: {{this.information.storageCapacity}}GB<br>
          numberOfSIM :{{this.information.storageCapacity}}<br>
          rearCameraResolution: {{this.information.storageCapacity}}MP<br>
          displaySize(inch):{{this.information.storageCapacity}}(inch) </p>
        <div>
          <div class="price float-start"> ${{this.price}}</div>
          {{#if ../../checkuser}}
          <a href="/addtocart/{{this._id}}/{{this.price}}/{{this.productName}}"
            class="btn btn-success float-end">Buy</a>
          {{else}}
          <button type="button" class="btn btn-success float-end" data-bs-toggle="modal" data-bs-target="#exampleModal"
            data-bs-whatever="@mdo">Buy</button>

          {{/if}}
        </div>
      </div>
    </div>
  </div>
  {{/each}}

</div>
{{/each}}
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New message</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form>
          
          <div class="mb-3">
            <label for="message-text" class="col-form-label">Message:</label>
            <div class="modal-body">
              
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <a href="/users/signin" class="btn btn-primary">Sign in</a>
      </div>
    </div>
  </div>
</div>